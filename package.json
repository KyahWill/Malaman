{
	"name": "malaman",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:accessibility": "vitest --run --config vitest.accessibility.config.ts",
		"test:performance": "vitest --run --config vitest.performance.config.ts",
		"test:all": "npm run test && npm run test:e2e && npm run test:accessibility",
		"db:setup": "bash scripts/setup-database.sh",
		"db:start": "supabase start",
		"db:stop": "supabase stop",
		"db:reset": "supabase db reset",
		"db:status": "supabase status",
		"db:studio": "supabase studio",
		"db:push": "supabase db push",
		"db:pull": "supabase db pull",
		"db:diff": "supabase db diff",
		"db:migration": "supabase migration new",
		"db:seed": "node scripts/seed-test-data.js seed",
		"db:cleanup": "node scripts/seed-test-data.js cleanup",
		"db:reset-test": "node scripts/seed-test-data.js reset",
		"storage:init": "node scripts/init-storage.js",
		"deploy:setup": "bash scripts/production-setup.sh",
		"deploy:backup": "bash scripts/backup-database.sh",
		"deploy:restore": "bash scripts/restore-database.sh",
		"deploy:docker": "docker-compose -f docker-compose.prod.yml up -d",
		"deploy:docker:stop": "docker-compose -f docker-compose.prod.yml down",
		"deploy:docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
		"deploy:health": "curl -f http://localhost:3000/api/health || curl -f https://localhost/api/health",
		"test:unit": "vitest --run",
		"test:integration": "vitest --run --config vitest.config.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/postcss": "^4.1.12",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.1.4",
		"@testing-library/svelte": "^4.0.5",
		"@testing-library/user-event": "^14.5.1",
		"@types/dompurify": "^3.0.5",
		"@vitest/ui": "^1.0.4",
		"autoprefixer": "^10.4.21",
		"axe-core": "^4.8.2",
		"happy-dom": "^12.10.3",
		"msw": "^2.0.8",
		"playwright": "^1.40.0",
		"postcss": "^8.5.6",
		"supertest": "^6.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^1.0.4"
	},
	"dependencies": {
		"@supabase/ssr": "^0.6.1",
		"@supabase/supabase-js": "^2.55.0",
		"@tiptap/core": "^3.2.0",
		"@tiptap/extension-color": "^3.2.0",
		"@tiptap/extension-highlight": "^3.2.0",
		"@tiptap/extension-image": "^3.2.0",
		"@tiptap/extension-link": "^3.2.0",
		"@tiptap/extension-text-align": "^3.2.0",
		"@tiptap/extension-underline": "^3.2.0",
		"@tiptap/extension-youtube": "^3.2.0",
		"@tiptap/pm": "^3.2.0",
		"@tiptap/starter-kit": "^3.2.0",
		"dompurify": "^3.2.6",
		"lucide-svelte": "^0.541.0"
	}
}
